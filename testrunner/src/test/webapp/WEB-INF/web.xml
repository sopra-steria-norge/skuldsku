<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">

    <servlet>
        <servlet-name>dataServlet</servlet-name>
        <servlet-class>no.steria.copito.testrunner.httpspy.testjetty.DataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dataServlet</servlet-name>
        <url-pattern>data/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>postServlet</servlet-name>
        <servlet-class>no.steria.copito.testrunner.httpspy.testjetty.PostFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>postServlet</servlet-name>
        <url-pattern>post/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>logFilter</filter-name>
        <filter-class>no.steria.copito.testrunner.httpspy.testjetty.TestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>


</web-app>